<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer"
      stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="scheduling.ui.UiController"
      styleClass="main-container">

    <HBox styleClass="input-row">
        <Label text="input file" />
        <TextField fx:id="inputField"
                   onKeyReleased="#handleOnKeyReleased"
                   HBox.hgrow="ALWAYS" />
        <Button fx:id="selectFileButton"
                mnemonicParsing="false"
                onMouseClicked="#selectFileClicked"
                text="choose file" />
    </HBox>

    <HBox styleClass="button-row">
        <Button fx:id="startButton"
                mnemonicParsing="false"
                onMouseClicked="#startClicked"
                text="start" />
        <Button fx:id="stopButton"
                disable="true"
                mnemonicParsing="false"
                onMouseClicked="#stopClicked"
                text="stop" />
    </HBox>

    <Label text="console" styleClass="console-label" />

    <TextArea fx:id="outputConsole"
              editable="false"
              VBox.vgrow="ALWAYS"
              styleClass="output-console" />
</VBox>
